{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["./typings"],
    "target": "ES6",
    "rootDir": "./",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "types": ["@types/jest", "highlight.js/types"],
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
